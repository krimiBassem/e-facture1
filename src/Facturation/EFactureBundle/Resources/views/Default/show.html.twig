{% extends 'FacturationEFactureBundle::layout.html.twig' %}

{% block container %}
    <h1>Facture</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ facture.id }}</td>
            </tr>
            <tr>
                <th>Destinataire</th>
                <td>{{ facture.destinataire }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ facture.referenceFacture }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ facture.dateCreationFacture|date('d-M-Y') }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ facture.dateEcheanceFacture|date('d-M-Y') }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ facture.montant }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ facture.etatFacture }}</td>
            </tr>

        </tbody>
    </table>

    <ul>



        <li>
            <a href="{{ path('facture_affiche') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('facture_edit', { 'id': facture.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>





    </ul>
{% endblock %}
